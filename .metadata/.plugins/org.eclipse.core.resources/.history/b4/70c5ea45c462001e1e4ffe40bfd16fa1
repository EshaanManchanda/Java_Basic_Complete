package Patterns;
import InputOutput.pattern_IO;

public class Triangle {
	int inputSize()
	{
		pattern_IO.size();
		int size=pattern_IO.size;
		return size;
	}
	public void print()
	{
		int size=inputSize();
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int space=1;space<=size-i;space++)
			{
				System.out.print(" ");
			}
			for(int j=1;j<=i;j++)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}
	public void hollow()
	{
		int size=inputSize();
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int space=1;space<=size-i;space++)
			{
				System.out.print(" ");
			}
			for(int j=1;j<=i;j++)
			{
				if(i==1 || j==1 || i==size || j==i)
					System.out.print("* ");
				else
					System.out.print("  ");
			}
			System.out.println();
		}
	}
	public void reverse()
	{
		int size=inputSize();
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int space=1;space<i;space++)
			{
				System.out.print(" ");
			}
			for(int j=size;j>=i;j--)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}
	public void halfPyramid()
	{
		int size=inputSize();
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int j=1;j<=i;j++)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}
	public void invertedHalfPyramid()
	{
		int size=inputSize();
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int j=size;j>=i;j--)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}
	public void hollowInvertedHalfPyramid()
	{
		int size=inputSize();
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int j=size;j>=i;j--)
			{
				if(i==1 || j==size || j==i || i==size)
					System.out.print("* ");
				else
					System.out.print("  ");
			}
			System.out.println();
		}
	}
}
