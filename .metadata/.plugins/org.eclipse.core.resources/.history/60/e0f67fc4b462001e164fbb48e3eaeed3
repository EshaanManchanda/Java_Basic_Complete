package Patterns;
import InputOutput.pattern_IO;

public class Triangle {
	public void print()
	{
		pattern_IO.size();
		int size=pattern_IO.size;
		System.out.println();
		for(int i=1;i<=size;i++)
		{
			for(int space=1;space<=size-i;space++)
			{
				System.out.print("  ");
			}
			for(int j=1;j<=i;j++)
			{
				if(i%2==0)
					System.out.print(" * ");
				else
					System.out.print("* ");
			}
			System.out.println();
		}
	}

}
